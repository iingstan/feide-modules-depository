
<form class="form-horizontal login_form" id="reg_form">
  <fieldset>
    <legend>注册</legend>
    <div class="form-group">
      <label for="username" class="col-lg-2 control-label">用户名</label>
      <div class="col-lg-10">
        <input type="text" class="form-control" id="username" placeholder="Username" required>
      </div>
    </div>
    <div class="form-group">
      <label for="password" class="col-lg-2 control-label">密码</label>
      <div class="col-lg-10">
        <input type="password" class="form-control" id="password" placeholder="Password" required>
      </div>
    </div>
    <div class="form-group">
      <label for="password2" class="col-lg-2 control-label">重复密码</label>
      <div class="col-lg-10">
        <input type="password" class="form-control" id="password2" placeholder="Password2" required>
        <div class="form_error" id="password2_error"></div>
      </div>
    </div>    
    <div class="form-group">
      <div class="col-lg-10 col-lg-offset-2">
        <button type="submit" class="btn btn-primary">提交</button>
        <button type="reset" class="btn btn-default">重置</button>
      </div>
    </div>
  </fieldset>
</form>

{{#extend "html_bottom"}}
<script src="/js/reg.js"></script>
{{/extend}}