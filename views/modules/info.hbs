<h3>{{modulename}} 模块信息</h3>

<div id="module_info"></div>

<div id="module_operate" style="display:none;">
  <a href="#" id="delete_version" class="btn btn-warning">删除此版本模块</a>
  <a href="#" id="delete_module" class="btn btn-danger">删除整个模块</a>
</div>

<div id="readme"></div>

<script id="module_info_template" type="text/x-handlebars-template">
<dl class="infodl">
  <dt>版本</dt>
  <dd>
    <select name="" id="version_select" class="form-control" style="width:120px;">
      \{{#each versions}}
        <option value="\{{this}}">\{{this}}</option>
      \{{/each}}
      
    </select>
   </dd>
  <dt>上传人</dt>
  <dd>\{{baseinfo.username}}</dd>
  <dt>简介</dt>
  <dd>\{{packageinfo.description}}</dd> 
  <dt>关键字</dt>
  <dd>\{{packageinfo.keywords}}&nbsp;</dd>
  <dt>文件列表</dt>
  <dd>
    \{{#each files}}
      <li><a href="/file/{{modulename}}/\{{../packageinfo.version}}/\{{this}}" target="_blank">\{{this}}</a></li>
    \{{/each}}
  </dd>  
</dl>
</script>

{{#extend "html_bottom"}}
<script>
  var modulename = "{{modulename}}"
  var version = "{{version}}"
</script>
<script src="/js/markdown.min.js"></script>
<script src="/js/module.js"></script>
{{/extend}}